{
    "files.associations": {
        "*.rst": "restructuredtext"
    },
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true
    },
    "makefile.configureOnOpen": false,
    "triggerTaskOnSave.tasks": {
        "build-docs": [
            "*.rst"
        ]
    }
}
